        let hasLink02 = true;
        let hasSinger02 = false;

        // Check singer
        hasSinger02 ? flagSigner02 = "singer-thumb" : "";

        let linkItem02 = "<a href='#' class='d-flex align-items-center justify-content-center w-100'><button type='button' class='btn btn-add rounded-pill btn-icon'><i class='ci-add'></i></button></a>";
        let contentItem02 = "<div class='product-thumb " + flagSigner02 + "'><div class='position-relative w-100'><div class='product-card-actions'><a class='d-inline-block align-middle like-toggle' href='#' data-bs-toggle='button'><i class='ci-u-like-outline size-24'></i><i class='ci-u-like-solid size-24'></i></a><button type='button' class='btn btn-warning rounded-pill btn-icon mx-3 play-toggle' data-bs-toggle='button'><i class='ci-u-triangle'></i><i class='ci-u-pause-sign'></i></button><a class='d-inline-block align-middle' href='#'><i class='ci-u-more size-24'></i></a></div><a class='product-thumb-overlay rounded' href='#'></a><img src='https://picsum.photos/seed/picsum/200' class='rounded w-100' alt='Product'></div></div><div class='card-body'><h6 class='product-title mb-0 text-truncate-multi h6'><a href='marketplace-single.html'>Born to Touch Your Feelings: Best of Rock Ballads is a compilation album by German rock band Scorpions a compilation album</a></h6></div>";

        let selectedItem02 = "";
        let flagLink02 = "";

        for (index02 = 1; index02 <= 6; index02++) {
            if (!hasLink02) {
                index02 === 1 ? flagLink02 = "card-link" : flagLink02 = "";
                index02 === 1 ? selectedItem02 = linkItem02 : selectedItem02 = contentItem02;
            } else {
                flagLink02 = "";
                selectedItem02 = contentItem02;
            }
            itemSong02 += "<div class='col-lg-2 col-md-3 col-sm-6 px-2 d-flex'>";
